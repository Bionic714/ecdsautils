include $(TOPDIR)/rules.mk

PKG_NAME:=ecdsautil
PKG_VERSION:=0.1
PKG_RELEASE:=1

PKG_SOURCE:=$(PKG_NAME)-$(PKG_VERSION).tar.gz
PKG_SOURCE_URL:=
PKG_MD5SUM:=e13740acf53b765e680149ecfdfca25a

PKG_BUILD_DEPENDS:=libuecc

include $(INCLUDE_DIR)/package.mk
include $(INCLUDE_DIR)/cmake.mk

define Package/ecdsautil
  SECTION:=utils
  CATEGORY:=Utilities
  DEPENDS:=
  TITLE:=Sign checksums and verify ECDSA signatures. 
  URL:=https://github.com/tcatm/ecdsautil
endef

CMAKE_OPTIONS += \
	-DCMAKE_BUILD_TYPE:String="MINSIZEREL" \


define Package/ecdsautil/description
 Utilities to sign and verify checksums using ECDSA.
endef

define Package/ecdsautil/install
	$(INSTALL_DIR) $(1)/usr/bin
	$(INSTALL_BIN) $(PKG_INSTALL_DIR)/usr/bin/ecdsakeygen $(1)/usr/bin/
	$(INSTALL_BIN) $(PKG_INSTALL_DIR)/usr/bin/ecdsasign $(1)/usr/bin/
	$(INSTALL_BIN) $(PKG_INSTALL_DIR)/usr/bin/ecdsaverify $(1)/usr/bin/
endef

$(eval $(call BuildPackage,ecdsautil))
